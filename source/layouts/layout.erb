        <%= yield %>
        
        <div class="site-footer">
            <footer>
                <ul class="logos">
                    <li><img src="<%= @baseurl %>/img/logos/open-knowledge.png" alt="Open Knowledge"></li>
                    <li><img src="<%= @baseurl %>/img/logos/transparency-international.png" alt="Transparency International"></li>
                    <li><img src="<%= @baseurl %>/img/logos/sunlight.png" alt="Sunlight Foundation"></li>
                    <li><img src="<%= @baseurl %>/img/logos/access-info.png" alt="Access Info"></li>
                    <li class="eu">
                        <img src="<%= @baseurl %>/img/logos/eu.png" alt="EU">
                        <span>
                            With the financial support of the Prevention of and Fight against Crime Programme European Commission - Directorate-General Home Affairs
                        </span>
                    </li>
                </ul>
                <% if current_page.data.attribution %>
                <div class="attribution">
                    <%= current_page.data.attribution %>
                </div>
                <% end %>
            </footer>
        </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.8.0.min.js"><\/script>')</script>
